#!/usr/bin/env ruby

require_relative '../lib/bookbox'

def main(argv)
  subcommand = argv.shift || 'normal'
  case subcommand
  when 'normal'
  when 'server'
    require_relative '../lib/bookbox/main/server'
    main_server argv
  when 'make'
    require_relative '../lib/bookbox/main/make'
    main_make argv
  else
    raise "unexpected subcommand: #{subcommand.inspect}"
  end
end

main ARGV
